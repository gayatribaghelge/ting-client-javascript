{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "compiled",
    "lib": [
      "dom",
      "es2015"
    ],
    "moduleResolution": "node",
    "module": "umd",
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "noImplicitAny": false
  }
}